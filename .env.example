# Example environment variables for MangaHybrid-BE
# Copy this file to `.env` and fill real values before running the app.

# Server
PORT=3000
NODE_ENV=development

# MongoDB
# Example: mongodb://username:password@host:port/database
MONGO_URI=mongodb://localhost:27017/mangahybrid

# JWT
JWT_SECRET=replace_with_secure_jwt_secret
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_SECRET=replace_with_secure_refresh_secret

# Redis (used by Bull queues and optional socket adapter)
# Example: redis://:password@hostname:6379/0
REDIS_URL=redis://localhost:6379

# AWS S3 (if using S3 uploads)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key_id
AWS_SECRET_ACCESS_KEY=your_aws_secret_access_key
AWS_S3_BUCKET=your_s3_bucket_name

# Email (nodemailer)
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email_user
EMAIL_PASS=your_email_password

# Optional / integration
FRONTEND_URL=http://localhost:3001
LOG_LEVEL=info

# Third-party / analytics (optional)
# SENTRY_DSN=
